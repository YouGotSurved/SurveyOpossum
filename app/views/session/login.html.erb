
<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<h1>Login</h1>
<p>Please login below.</p>

<%= form_tag(session_login_path) do %>

  <p><%= label_tag :name %>
  <%= text_field_tag :name %></p>

  <p><%= label_tag :password %>
  <%= password_field_tag :password %></p>

  <%= submit_tag "Log in" %>
<% end %>
